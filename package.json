{
  "name": "mdefeo.github.io",
  "version": "0.1.0",
  "private": true,
  "license": "UNLICENSED",
  "author": "Marcello De Feo <your-email@example.com>",
  "homepage": "https://mdefeo.github.io",
  "repository": {
    "type": "git",
    "url": "https://github.com/mdefeo/mdefeo.github.io.git"
  },
  "engines": {
    "node": ">=18",
    "yarn": ">=1.22"
  },
  "keywords": [
    "portfolio",
    "nextjs",
    "tailwindcss",
    "gsap",
    "react",
    "typescript",
    "daisyui"
  ],
  "browserslist": [
    "last 2 versions",
    "not dead",
    "> 0.2%"
  ],
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "scripts": {
    "build:dev": "cross-env NEXT_PUBLIC_ENV=development yarn next build",
    "start:dev": "cross-env NODE_ENV=development yarn next dev",
    "build:prod": "cross-env NODE_ENV=production yarn next build",
    "start:prod": "yarn next start",
    "lint": "yarn next lint",
    "lint:fix": "yarn next lint --fix",
    "test": "yarn jest --passWithNoTests",
    "test:watch": "yarn jest --watch",
    "test:coverage": "yarn jest --coverage",
    "test:ci": "yarn jest --ci",
    "test:accessibility": "node -r dotenv/config lighthouse $ACCESSIBILITY_URL --output json --output html --chrome-flags='--headless' --emulated-form-factor=desktop --output-path=reports/lighthouse-report",
    "format": "yarn prettier --write \"src/**/*.{js,jsx,ts,tsx,css,scss,md}\"",
    "prebuild": "yarn lint && yarn test",
    "report:accessibility": "yarn test:accessibility && open reports/lighthouse-report.html",
    "postinstall": "husky install"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^6.7.2",
    "@fortawesome/free-brands-svg-icons": "^6.7.2",
    "@fortawesome/free-solid-svg-icons": "^6.7.2",
    "@fortawesome/react-fontawesome": "^0.2.2",
    "cross-env": "^7.0.3",
    "daisyui": "^4.12.23",
    "dompurify": "^3.2.3",
    "dotenv": "^16.4.7",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "gsap": "^3.12.5",
    "next": "15.1.3",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "sanitize-html": "^2.14.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/sanitize-html": "^2.13.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9",
    "eslint-config-next": "15.1.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.17",
    "typescript": "^5"
  }
}

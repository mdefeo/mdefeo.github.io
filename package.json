{
  "name": "mdefeo.github.io",
  "description": "Personal and professional portfolio of Marcello De Feo",
  "version": "0.1.0",
  "author": "Marcello De Feo (https://marcellodefeo.com)",
  "private": false,
  "scripts": {
    "build:dev": "NODE_ENV=development next build --dotenv .env.development",
    "build:prod": "NODE_ENV=production next build",
    "start:dev": "NODE_ENV=development next dev --dotenv .env.development",
    "start:prod": "NODE_ENV=production next start",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:e2e": "playwright test",
    "test:all": "jest && playwright test",
    "format": "prettier --write .",
    "lint": "eslint . --fix",
    "ci:lint": "eslint .",
    "ci:test": "jest --ci --runInBand",
    "type-check": "tsc --noEmit",
    "test:accessibility": "axe --app=$APP_URL"
  },
  "dependencies": {
    "daisyui": "^4.12.22",
    "gsap": "^3.12.5",
    "next": "15.1.2",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@playwright/test": "^1.49.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^20",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.1.2",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "jest": "^29.7.0",
    "postcss": "^8",
    "tailwindcss": "^3.4.1",
    "typescript": "^5"
  }
}
